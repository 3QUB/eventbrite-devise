<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @event.body %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Date event:</strong>
  <%= @event.date_event %>
</p>
<% if @event.creator != current_user %>
    <% if @event.attendees.include?current_user %>
    <%= link_to 'Unsubscribe', event_unsubscribe_path(@event), method: :post%> |
    <% else %>
      <% if @event.price == 0%>
        <%= link_to 'Subscribe', event_subscribe_path(@event), method: :post%> |
      <% else %>
      <%= form_tag event_subscribe_path(@event) do %>
        <article>
          <% if flash[:error].present? %>
            <div id="error_explanation">
              <p><%= flash[:error] %></p>
            </div>
          <% end %>
          <label class="amount">
            <span>Amount: <%= @event.price.to_f%> â‚¬</span>
          </label>
        </article>

        <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                data-description="Payment event"
                data-amount="<%=@event.price * 100%>%"
                data-current="eur"
                data-locale="auto"></script>
      <% end %>
    <% end %>
  <% end %>
<% else %>
<%= link_to 'Edit', edit_event_path(@event) %> |
<% end %>
<%= link_to 'Back', events_path %>
